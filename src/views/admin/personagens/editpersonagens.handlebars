<style>
    body {
        background-color: rgb(33, 33, 59);
    }

    .div-geral {
        background-color: rgb(49, 49, 90);
    }

    .div-geral h3 {
        color: white;
    }
</style>
<main>
    <div class="p-5 mb-4 rounded-3 div-geral">
        <div class="container-fluid py-5">
            <h3> Editar Personagens: </h3>
            <div class="card">
                <div class="card-body">
                    <form action="/rota_personagens/personagens/editar_personagens" method="POST">
                        {{#if personagem}}
                        <label for="_id">ID: </label>
                        <input type="text" id="_id" name="_id" readonly="true" class="form-control"
                            value="{{personagem._id}}"><br>
                        <label for="nome">Nome: </label>
                        <input type="text" id="nome" name="nome" class="form-control" value="{{personagem.nome}}"><br>
                        <label for="funcao">Função: </label>
                        <input type="text" id="funcao" name="funcao" class="form-control"
                            value="{{personagem.genero}}"><br>
                        <button type="submit" class="btn btn-success">Editar personagem</button>
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</main>